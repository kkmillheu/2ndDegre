<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_2"
    android:background="@drawable/test"

    >

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forme Canonique"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titre"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/formule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ax²+bx+c"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/formule"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:text="a="
                android:layout_marginLeft="15sp"
                />

            <TextView
                android:id="@+id/aV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_toRightOf="@id/a"
                android:layout_alignBottom="@+id/a"
                android:textColor="@color/white"
                />


            <TextView
                android:id="@+id/b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/a"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:text="b="
                android:layout_marginLeft="15sp"
                />

            <TextView
                android:id="@+id/bV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_toRightOf="@id/b"
                android:layout_alignBottom="@+id/b"
                android:textColor="@color/white"
                />



            <TextView
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/b"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:text="c="
                android:layout_marginLeft="15sp"
                />

            <TextView
                android:id="@+id/cV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_toRightOf="@id/c"
                android:layout_alignBottom="@+id/c"
                android:textColor="@color/white"
                />


            <TextView
                android:id="@+id/delta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/c"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:text="Δ="
                android:layout_marginLeft="15sp"
                />

            <TextView
                android:id="@+id/deltaV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_toRightOf="@id/delta"
                android:layout_alignBottom="@+id/delta"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/blabla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_below="@id/delta"
                android:textAlignment="center"
                android:text="La forme canonique est:\na(x -α)² - ß \navec:\n α=-b/2a \n ß=(b² - 4ac)/4a"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/blabla"
                android:text="α="
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alphaV"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_toRightOf="@id/alpha"
                android:layout_alignBottom="@id/alpha"
                />


            <TextView
                android:id="@+id/beta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/alpha"
                android:text="ß="
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/betaV"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_toRightOf="@id/beta"
                android:layout_alignBottom="@id/beta"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_below="@id/beta"
                android:textStyle="italic"
                android:text="Résultat:"
                />

            <TextView
                android:id="@+id/resultat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/betaV"
                android:layout_marginTop="25sp"
                />




            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25sp"
                android:id="@+id/retour"
                android:layout_below="@id/resultat"
                android:layout_marginTop="25sp"
                android:src="@drawable/retour"
                />



        </RelativeLayout>


    </ScrollView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>
