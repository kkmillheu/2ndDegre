<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_4"
    android:background="@drawable/test">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/adView"
        >

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Résolution d'équation"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titre"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/formule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="ax²+bx+c=0"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="15sp" />


            <TextView
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/formule"
                android:text="a="
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="15sp" />

            <TextView
                android:id="@+id/aV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/a"
                android:layout_toRightOf="@id/a"
                android:text="."
                android:textColor="@color/white"

                android:textSize="25sp" />

            <TextView
                android:id="@+id/b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/a"
                android:text="b="
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="15sp" />

            <TextView
                android:id="@+id/bV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/b"
                android:layout_toRightOf="@id/a"
                android:text="."
                android:textColor="@color/white"

                android:textSize="25sp" />

            <TextView
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/b"
                android:text="c="
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="15sp" />

            <TextView
                android:id="@+id/cV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/c"
                android:layout_toRightOf="@id/c"
                android:text="."

                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/delta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/c"
                android:text="Δ="
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="15sp" />

            <TextView
                android:id="@+id/deltaV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/delta"

                android:layout_toRightOf="@id/delta"
                android:text="."
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/delta"
                android:layout_centerHorizontal="true"
                android:text="."
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/plus"
                android:layout_centerHorizontal="true"
                android:text="."
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/x1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bla"
                android:text="X1="
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="15sp" />

            <TextView
                android:id="@+id/x1V"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/x1"
                android:layout_toRightOf="@id/x1"
                android:text="(-b-√Δ)/(2a)"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="15sp" />

            <TextView
                android:id="@+id/x1bis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/x1"
                android:text="X1="
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="15sp" />

            <TextView
                android:id="@+id/x1Vbis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/x1V"
                android:layout_alignBottom="@id/x1bis"
                android:layout_toRightOf="@id/x1bis"
                android:textColor="@color/white"
                android:textSize="25sp"

                />

            <TextView
                android:id="@+id/x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/x1bis"
                android:text="X2="
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="15sp" />

            <TextView
                android:id="@+id/x2V"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/x1Vbis"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@id/x2"
                android:text="(-b+√Δ)/(2a)"
                android:textColor="@color/white"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/x2bis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/x2"
                android:text="X2="
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="15sp" />

            <TextView
                android:id="@+id/x2Vbis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/x2"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/x2bis"
                android:text="    "
                android:textColor="@color/white"
                android:textSize="25sp" />


            <ImageView
                android:id="@+id/retour"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:src="@drawable/retour"
                android:layout_below="@id/x2Vbis"
                android:layout_marginTop="25sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"

                />
        </RelativeLayout>


    </ScrollView>



</RelativeLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9696781235898812/4707019354">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>